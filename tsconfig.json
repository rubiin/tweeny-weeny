    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "target": "es2017",
    "declaration": true,
    "outDir": "./out",
    "removeComments": true,
    "skipLibCheck": false
  },
  "include": [
    "src/**/*"
  ]
}